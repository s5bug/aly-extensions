{
  "name": "aly-extensions",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "node build.ts",
    "dev": "node build.ts --watch",
    "clean": "node build.ts --clean",
    "repo": "node repo.ts",
    "lint": "eslint build.ts repo.ts src",
    "lint:fix": "eslint build.ts repo.ts src --fix",
    "lint:report": "eslint --output-file eslint_report.json --format json build.ts repo.ts src",
    "typecheck": "tsc --noEmit",
    "check": "pnpm run lint && pnpm run typecheck"
  },
  "devDependencies": {
    "@electron/asar": "^4.0.1",
    "@moonlight-mod/esbuild-config": "^1.0.0",
    "@moonlight-mod/eslint-config": "github:moonlight-mod/eslint-config",
    "@types/katex": "^0.16.7",
    "@types/node": "^24.2.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@moonlight-mod/types": "^1.3.25",
    "katex": "^0.16.22"
  }
}
